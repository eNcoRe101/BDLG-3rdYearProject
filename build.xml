<project>

    <target name="clean">
        <delete dir="out/build"/>
    </target>

    <target name="compile">
        <mkdir dir="out/build/classes"/>
        <javac srcdir="src" destdir="out/build/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="out/build/jar/HelloWorld.jar" basedir="out/build/classes">
            <manifest>
                <attribute name="Main-Class" value="oata.HelloWorld"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="out/build/jar/HelloWorld.jar" fork="true"/>
    </target>

</project>
